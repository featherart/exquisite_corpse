<div class="hero-unit">
<h1>All the Drawings</h1>

<table>
  <tr>
    <th>Thumb</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @drawings.each do |drawing| 
    %>
  <tr>
    <td class="drawing-display"><img src="<%= drawing.image %>" width="150px" height="auto"></img></td>
    <td><b><%= drawing.drawing_type.type_description %></b></td>
    
    <!-- <td><b><%#= drawing.type_description %></b></td> -->  <!-- this one is for the joins.select single query -->

    <td><%= drawing.user_id %></td>
    <td><%= link_to 'Show', drawing %></td>
    <td><%= link_to 'Destroy', drawing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
<%= link_to 'New Drawing', new_drawing_path %>
